<launch>
  <node name="bridge" pkg="opcua_ros_bridge" type="bridge_node" output="screen" required="true">
    <rosparam>
      server: opc.tcp://192.168.250.1:4840
      interval: 100
      publishers:
        <!-- my_bool:
          path: 1:MyBool
          msg: std_msgs/Bool -->
        my_double:
          path: 4:new_Controller_0/3:GlobalVars/4:MY_RAND
          msg: araig_msgs/Float64Stamped
        server_time:
          path: Server/ServerStatus/CurrentTime
          msg: std_msgs/Time
          publish: publish_time
          lazy: false
    </rosparam>
  </node>
</launch>
